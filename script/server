#!/usr/bin/env bash

function sshd_server {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  if [[ "$#" == 0 ]]; then
    set -- default
  fi

  case "${1:-}" in
    default)
      (set +f; chmod 600 $shome/etc/*key)
      exec $(which "$PKG_HOME/install/sbin/sshd" /usr/sbin/sshd) -f "$shome/etc/sshd_config" -De
      ;;
    *)
      echo "ERROR: unknown server command: ${1:-/not-supplied/}" 1>&2
      return 1
      ;;
  esac
}

sshd_server "$@"
